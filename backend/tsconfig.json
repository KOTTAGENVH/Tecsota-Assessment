{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist"
    },
    "include": [
      "src/**/*.ts",
      "**/*.spec.ts",
      "**/*.config.ts"
    ],
    "exclude": ["node_modules"]
  }
  